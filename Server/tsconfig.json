{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./src",
    "outDir": "./dist",

    "types": ["node"],

    "sourceMap": true,
    "declaration": true,

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,

    "skipLibCheck": true
  },
  "include": ["src"]
}
